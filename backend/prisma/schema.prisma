generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}


// --- MODEL UNTUK MANAJEMEN USER & ROLE ---

// Model untuk Role (Admin, Cashier, Employee, dll - bisa custom)
model Role {
  id         Int      @id @default(autoincrement())
  nama       String   @unique // "Admin", "Cashier", "Employee", dst
  gajiPokok  Float    @default(0) // Gaji pokok untuk role ini
  deskripsi  String?  // Deskripsi role (opsional)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  users      User[]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  nama      String
  password  String // Penting: Jangan simpan password asli, simpan versi hash-nya
  role      Role     @relation(fields: [roleId], references: [id])
  roleId    Int
  
  // Gaji per jam (admin yang set, untuk hitung gaji harian)
  gajiPerJam Float   @default(0) // Gaji per jam kerja
  
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // Relasi ke fitur lain
  gaji              Gaji[]
  jadwal            Jadwal[]
  absensi           Absensi[]
  laporanPemasukan  LaporanPemasukan[]
}

// --- MODEL UNTUK FITUR JADWAL & ABSENSI ---

model Jadwal {
  id           Int      @id @default(autoincrement())
  waktuMulai   DateTime
  waktuSelesai DateTime
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
}

model Absensi {
  id         Int      @id @default(autoincrement())
  tanggal    DateTime @default(now()) @db.Date // Tanggal absensi
  shift      String   // "Siang" (09:00-15:00) atau "Sore" (15:00-21:00)
  
  jamMasuk   DateTime @default(now()) // Jam aktual masuk kerja
  jamKeluar  DateTime? // Jam aktual keluar kerja (nullable jika belum clock out)
  
  // Jam standar shift (untuk hitung keterlambatan)
  jamMulaiShift   DateTime // 09:00 untuk Siang, 15:00 untuk Sore
  jamSelesaiShift DateTime // 15:00 untuk Siang, 21:00 untuk Sore
  
  // Perhitungan gaji
  jamKerja      Float   @default(0) // Total jam kerja actual (jamKeluar - jamMasuk)
  menitTerlambat Int    @default(0) // Menit terlambat dari jamMulaiShift
  potonganGaji  Float   @default(0) // Potongan karena telat (jika > 10 menit)
  totalGaji     Float   @default(0) // Gaji yang didapat (gajiPerJam Ã— jamKerja - potongan)
  
  status     String   @default("Hadir") // "Hadir", "Telat", "Alpha"
  
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
}

// --- MODEL UNTUK FITUR GAJI & PEMASUKAN ---

model Gaji {
  id         Int      @id @default(autoincrement())
  gajiPokok  Float
  bonus      Float    @default(0)
  potongan   Float    @default(0)
  tanggalGaji DateTime
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
}

model LaporanPemasukan {
  id              Int      @id @default(autoincrement())
  jumlahPemasukan Float
  tanggalLaporan  DateTime
  shift           String // Menggunakan enum Shift di bawah
  user            User     @relation(fields: [userId], references: [id])
  userId          Int
}

